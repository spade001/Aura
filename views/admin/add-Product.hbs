<main id="main" class="main">

    <div class="pagetitle">
        <h1>Add product</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/dash">Home</a></li>
                <li class="breadcrumb-item"><a href="/admin/view-products">Product Management</a></li>
                <li class="breadcrumb-item active">View Products</li </ol>
        </nav>
    </div><!-- End Page Title -->
    {{#if productError}}
    <div class="alert alert-danger alert-dismissible fade show " role="alert">
        <i class="bi bi-exclamation-triangle me-1"></i>
        {{productError}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    <section class="section">
        <div class="row">

            <div class="col-lg-10">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Floating labels Form</h5>
                      {{#if nocategory}}
                      <h1>First please create a category</h1>
                      {{else}}
                        <!-- Floating Labels Form -->
                        <form class="row g-3" action="/admin/add-products" method="post" enctype="multipart/form-data">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input name="titleMain" type="text" class="form-control" id="floatingName"
                                        placeholder="State">
                                    <label for="floatingName">Title Main</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input name="title" type="text" class="form-control" id="floatingName"
                                        placeholder="State">
                                    <label for="floatingName">Title</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating mb-3">
                                    <select onchange="getCategoryDiscount()" name="category" class="form-select"
                                        required id="floatingCategory" aria-label="State">
                                        <option selected>Select Any</option>
                                        {{#each category}}
                                        <option value="{{this._id}}">{{this.category}}</option>
                                        {{/each}}
                                    </select>
                                    <label for="floatingCategory">Category</label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-floating">

                                    <input name="categoryDiscount" value="0" type="number" class="form-control"
                                        id="categoryDiscount" placeholder="" readonly>

                                    <label for="categoryDiscount"><i class="bi bi-percent"></i>Category </label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-floating mb-3">
                                     <input name="brand" value="{{product.actualPrice}}" type="text" class="form-control"
                                        id="floatingCity" placeholder="City">
                                    <label for="floatingCity">Brand</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-floating">
                                    <input name="color" value="{{product.actualPrice}}" type="text" class="form-control"
                                        id="floatingCity" placeholder="City">
                                    <label for="floatingCity">Color</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-floating">
                                    <input name="MRP" onkeyup="getTotalDiscount()" type="number" class="form-control"
                                        id="MRP" placeholder="City">
                                    <label for="MRP"><i class="bi bi-currency-rupee"></i>MRP
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-floating">
                                    <input onkeyup="getTotalDiscount(this)" type="number" name="productDiscount"
                                        class="form-control" id="productDiscount" placeholder="City">
                                    <label for="ProductDiscount"><i class="bi bi-percent"></i>Product</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input name="stock" type="number" class="form-control" id="floatingCity"
                                        placeholder="City">
                                    <label for="floatingCity">Stock</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input name="offerPrice" type="number" class="form-control" id="offerPrice"
                                        placeholder="City" value="0" readonly>
                                    <label for="offerPrice"><i class="bi bi-currency-rupee"></i> Offer Price</label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-floating">
                                    <input name="totalDiscount" type="number" class="form-control" id="totalDiscount"
                                        placeholder="City" value="0" readonly>
                                    <label for="floatingCity"><i class="bi bi-percent"></i>Total</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea name="productDescription" class="form-control" placeholder="Address"
                                        id="floatingTextarea" style="height: 100px;"></textarea>
                                    <label for="floatingTextarea">Product Description</label>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Image 1</label>
                                <img id="imgView1" src="/images/product-img/{{product.image1}}" style="width: 100px"
                                    alt="">
                                <div class="col-sm-8">
                                    <input onchange="viewImage1(event)" type="file" class="form-control" name="image1"
                                        value="" id="formFile " accept="image/*" required>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Image 2</label>
                                <img id="imgView2" src="/images/product-img/{{product.image2}}" style="width: 100px"
                                    alt="">
                                <div class="col-sm-8">

                                    <input onchange="viewImage2(event)" type="file" class="form-control" name="image2"
                                        value="" id="formFile" accept="image/*" required>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Image 3</label>
                                <img id="imgView3" src="/images/product-img/{{product.image3}}" style="width: 100px"
                                    alt="">
                                <div class="col-sm-8">
                                    <input onchange="viewImage3(event)" type="file" class="form-control" name="image3"
                                        value="" id="formFile" accept="image/*" required>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Image 4</label>
                                <img id="imgView4" src="/images/product-img/{{product.image4}}" style="width: 100px"
                                    alt="">
                                <div class="col-sm-8">
                                    <input onchange="viewImage4(event)" type="file" class="form-control" name="image4"
                                        value="" id="formFile" accept="image/*" required>
                                </div>
                            </div>
                            <div class="text-center">
                                <a class="btn btn-secondary btn-sm" onclick="history.back()">Cancel</a>
                                <button type="reset" class="btn btn-danger btn-sm">Reset</button>
                                <button type="submit" class="btn btn-success btn-sm">Submit</button>

                            </div>
                        </form><!-- End floating Labels Form -->
       {{/if}}

                    </div>
                </div>
            </div>





        </div>
    </section>

</main><!-- End #main -->

<script>

    function viewImage1(event) {
        document.getElementById("imgView1").src = URL.createObjectURL(event.target.files[0])
    }
    function viewImage2(event) {
        document.getElementById("imgView2").src = URL.createObjectURL(event.target.files[0])
    }
    function viewImage3(event) {
        document.getElementById("imgView3").src = URL.createObjectURL(event.target.files[0])
    }
    function viewImage4(event) {
        document.getElementById("imgView4").src = URL.createObjectURL(event.target.files[0])
    }

    function getCategoryDiscount() {
        let variableOne = document.getElementById('floatingCategory')
        let variableTwo = variableOne.options[variableOne.selectedIndex].text
        if (variableTwo === "Select Any") {
            document.getElementById('categoryDiscount').value = "0"
        }
         else
          {
            $.ajax({
                url: "/admin/getCategoryDiscount",
                data: {
                    categoryName: variableTwo
                },
                method: 'get',
                success: function (response){
                    document.getElementById('categoryDiscount').value = response

                }
            })
        }
    }


    function getTotalDiscount() {
        let proDis = parseInt(document.getElementById('productDiscount').value)
        let catDis = parseInt(document.getElementById('categoryDiscount').value)
        let MRP = parseInt(document.getElementById('MRP').value)

        document.getElementById('totalDiscount').value = proDis + catDis

        let Dis = (proDis + catDis) / 100
        document.getElementById('offerPrice').value = MRP - (MRP * Dis)
    }


</script>