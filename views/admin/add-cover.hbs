<main id="main" class="main">
    <div class="pagetitle">
        <h1>Add Cover Image</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/dash">Home</a></li>
                <li class="breadcrumb-item"><a href="/admin/topBanner">Banner Management</a></li>
                <li class="breadcrumb-item active">Add new cover Image</li> 
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Floating labels Form</h5>
                        <!-- Floating Labels Form -->
                        <form class="row g-3" action="/admin/add-cover" method="post" enctype="multipart/form-data">
                          <div class="row mb-3 mt-5">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Add Image</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="file" name="image" id="formFile" accept="image/*" required>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <button type="reset" class="btn btn-secondary">Reset</button>
                                <button class="btn btn-primary">Back</button>
                            </div>
                        </form><!-- End floating Labels Form -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->