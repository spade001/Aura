
<main id="main" class="main">
    <div class="pagetitle">
        <h1>Banner Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/dash">Home</a></li>
                <li class="breadcrumb-item"></li><a href="#">Banner Management/</a></li>
                <li class="breadcrumb-item active"> Top Banner</i></li>
            </ol>
        </nav>
    </div><!-- End Page Title -->




    <section class="section">
        <div>
            <p>Upload cover image <a
                    href="/admin/addBanner" class="btn btn-primary btn-sm">Add New</a></p>

        </div>
        <hr>
        <div class="row ">
            {{#each bannerTop_main}}
            <div class=" col-md-6 card mb-3 ">
                <img class="card-img-top" src="/images/banner-img/{{this.largeImg}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{this.bannerTitle}}</h5>
                    <p class="card-text">{{this.bannerDescription}}</p>
                    <a class="btn btn-info btn-sm text-light" href="/admin/edit-TopBanner/{{this._id}}">Edit this
                        banner</a>
                    <button class="btn btn-danger btn-sm text-light" onclick="deleteBanner('{{this._id}}')">Delete
                        banner</button>
                </div>
            </div>
            {{/each }}

        </div>
    </section>











</main><!-- End #main -->