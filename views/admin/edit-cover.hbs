<main id="main" class="main">
    <div class="pagetitle">
        <h1>Edit</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/dash">Home</a></li>
                <li class="breadcrumb-item"><a href="/admin/topBanner">Banner Management</a></li>
                <li class="breadcrumb-item active">Edit</li> </ol>
        </nav>
    </div><!-- End Page Title -->
       <form class="row g-3" action="/admin/update-CoverImg/{{coverimg._id}}" method="post" enctype="multipart/form-data">
                            <div class="col-md-12">
                            <div class="row mb-3 mt-5">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Add Image</label>
                                <div class="col-sm-10 col-md-">
                                      <img class="card-img-top w-50 h-50" src="/images/cover-Img/{{coverimg.Img}}"
                                    alt="Card image cap" id="imgView">
                                    <input class="form-control" type="file" name="image" id="formFile" onchange="viewImage(event)">
                                </div>
                            </div>
                        
                            <div class="text-center">
                                <button class="btn btn-secondary btn-sm" onclick="history.back()">Cancel</button>
                                <button type="reset" class="btn btn-danger btn-sm">Reset</button>
                                <button type="submit" class="btn btn-success btn-sm">Submit</button>
                            </div>

                        </form><!-- End floating Labels Form -->
                    </div>
    </section>

</main><!-- End #main -->

<script>
  function viewImage(event){
    document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
  }

</script>

