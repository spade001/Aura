<div class="breadcrumb-area bg-gray menuBarTop">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                <li>
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="/account">Account</a>
                </li>

                <li class="/active">Your Order </li>
            </ul>
        </div>
    </div>
</div>


<style>
    .cardNew {
        background-color: white;
    }
</style>
<div class="ps-10">
    
    <button class="btn btn-sm btn-outline-danger float-right mr-5 " onclick="exportToPDF()">Download  <i
            class="bi bi-filetype-pdf"></i></button>
</div>
<section class=" gradient-custom" id="invoice">
    <div class="container py-5 ">
        <div class="row d-flex justify-content-center align-items-center ">
            <div class="col-lg-10 col-xl-8">
                <div class="cardNew" style="border-radius: 10px;" >
                    <div class="card-header px-4 py-5" style="background-color:rgb(102,102,102);">
                        <h5 class="text-light mb-0">Thanks for your Order, <span
                                style="color: rgb(255, 255, 255);">{{orderDetails.deliveryDetails.Name}}</span>!</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <p class="lead fw-normal mb-0 fw-bold" style="color:rgb(228,67,17);">Order Details</p>
                            <p class="small text-muted mb-0">Order Date : {{orderDetails.orderDate}}</p>

                        </div>
                        <p>Order Id :#{{orderDetails._id}}</p>

                        <div class="row mb-4 mt-4">

                            <div class="float-left col-md-6">
                                <h4>Shipped to : {{orderDetails.deliveryDetails.Name}}</h4>
                                <h4>Payment method : {{orderDetails.payment_method}}</h4>
                            </div>


                            <div class="float-right col-md-6">
                                <h4>Delivery Address:</h4>
                                {{orderDetails.deliveryDetails.Street}} <br>
                                {{orderDetails.deliveryDetails.TownCity}}-{{orderDetails.deliveryDetails.State}}
                                {{orderDetails.deliveryDetails.Country}}-{{orderDetails.deliveryDetails.PostCode}}

                            </div>


                        </div>

                        {{#each oldProductDetails}}
                        <div class=" shadow-0 border mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-2">
                                        <img src="/images/product-img/{{this.cartDetails.product.image1}}" width="80"
                                            alt="">
                                    </div>
                                    <div class="col-md-4 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0">{{this.cartDetails.product.title}}</p>
                                    </div>
                                    {{!-- <div
                                        class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">White</p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">Capacity: 64GB</p>
                                    </div> --}}
                                    <div class="col-md-1 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">Qty:{{this.cartDetails.quantity}}</p>
                                    </div>
                                    <div class="col-md-1 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">{{this.cartDetails.product.offerPrice}}</p>
                                    </div>
                                    <div class="col-md-1 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">{{this.cartDetails.applicableCouponDiscount}}
                                        </p>
                                    </div>
                                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">Total: Rs. {{this.cartDetails.productNetTotal}}
                                        </p>
                                    </div>
                                </div>
                                <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                                <div class="row d-flex align-items-center">
                                    <div class="col-md-2">
                                        <p class="text-muted mb-0 small">Track Order</p>
                                    </div>
                                    <div class="col-md-10">
                                        {{#isEqual this.cartDetails.status 'Placed'}}
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            <div class="progress-bar" role="progressbar"
                                                style="width: 15%; border-radius: 16px; background-color: rgb(228,67,17);"
                                                aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        {{/isEqual}}
                                        {{#isEqual this.cartDetails.status 'Shipped'}}
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            <div class="progress-bar" role="progressbar"
                                                style="width: 40%; border-radius: 16px; background-color: rgb(228,67,17);"
                                                aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        {{/isEqual}}
                                        {{#isEqual this.cartDetails.status 'On the Way'}}
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            <div class="progress-bar" role="progressbar"
                                                style="width: 65%; border-radius: 16px; background-color: rgb(228,67,17);"
                                                aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        {{/isEqual}}
                                        {{#isEqual this.cartDetails.status 'Delivered'}}
                                        <div class="progress" style="height: 6px; border-radius: 16px;">
                                            <div class="progress-bar" role="progressbar"
                                                style="width: 100%; border-radius: 16px; background-color: rgb(228,67,17);"
                                                aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        {{/isEqual}}

                                        <div class="d-flex justify-content-around mb-1">
                                            <p class=" mt-1 mb-0 small ms-xl-5">Placed</p>
                                            <p class=" mt-1 mb-0 small ms-xl-5">Shipped</p>
                                            <p class=" mt-1 mb-0 small ms-xl-5">On the Way</p>
                                            <p class=" mt-1 mb-0 small ms-xl-5">Delivered</p>
                                        </div>

                                    </div>

                                    <div>


                                        {{#isEqual this.cartDetails.status 'Placed'}}
                                        <h4 id="{{../this.cartDetails.item}}" class="float-left">Order Placed
                                            Successfully</h4>
                                        <button id="cancelBtn " style="background-color: rgb(228,67,17);"
                                            onclick="cancelOrder('{{../this.cartDetails.item}}','{{../this.orderId}}')"
                                            class="btn rounded-pill btn-sm text-light float-right">Cancel</button>
                                        {{/isEqual}}
                                        {{#isEqual this.cartDetails.status 'Shipped'}}
                                        <h4 id="{{../this.cartDetails.item}}" class="float-left">Order Shipped </h4>
                                        <button id="cancelBtn " style="background-color: rgb(228,67,17);"
                                            onclick="cancelOrder('{{../this.cartDetails.item}}','{{../this.orderId}}')"
                                            class="btn rounded-pill btn-sm text-light float-right">Cancel</button>
                                        {{/isEqual}}
                                        {{#isEqual this.cartDetails.status 'On the Way'}}
                                        <h4 id="{{../this.cartDetails.item}}" class="float-left">On the way </h4>
                                        <button id="cancelBtn " style="background-color: rgb(228,67,17);"
                                            onclick="cancelOrder('{{../this.cartDetails.item}}','{{../this.orderId}}')"
                                            class="btn rounded-pill btn-sm text-light float-right">Cancel</button>
                                        {{/isEqual}}
                                        {{#isEqual this.cartDetails.status 'Delivered'}}
                                        <h4 id="{{../this.cartDetails.item}}" class="float-left">Delivered </h4>
                                        <button id="cancelBtn " style="background-color: rgb(9, 139, 28);"
                                            onclick="returnOrder('{{../this.cartDetails.item}}','{{../this.orderId}}')"
                                            class="btn rounded-pill btn-sm text-light float-right">Return </button>
                                        {{/isEqual}}
                                        {{#isEqual this.cartDetails.status 'Cancelled'}}
                                        <h4 id="{{../this.cartDetails.item}}" class="float-left">Order Cancelled </h4>
                                        <h4 class="float-right"> Refund will be credited</h4>


                                        {{/isEqual}}
                                        {{#isEqual this.cartDetails.status 'Returned'}}
                                        <h4 id="{{../this.cartDetails.item}}" class="float-left">Product Returned</h4>
                                        <h4 class="float-right"> Refund will be credited</h4>


                                        {{/isEqual}}

                                    </div>
                                </div>
                            </div>
                        </div>

                        {{/each}}


                        <div class="d-flex justify-content-end pt-2">
                           
                            <p class="text-muted mb-0"><span class="fw-bold me-4">Gross Total</span><i
                                    class="bi bi-currency-rupee"></i>
                                {{orderDetails.totalAmount}}</p>
                        </div>

                     
                    <div class="card-footer border-0 px-4 py-5"
                        style="background-color: rgb(102,102,102); border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                        <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
                            paid: <span class="h2 mb-0 ms-2"><i class="bi bi-currency-rupee"></i>
                                {{orderDetails.netAmountPaid}}</span></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>









<script>
    function cancelOrder(ProId, OrderId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "This product will be cancelled from your order!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Confirm'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/cancelTheOrder',
                    data: {
                        proId: ProId,
                        orderId: OrderId
                    },
                    method: 'get',
                    success(response) {
                        Swal.fire(
                            'Order Canceled!',
                            'Your order is cancelled Successfully.',
                            'success'
                        )
                        location.reload()

                    }
                })

            }
        })
    }

    function returnOrder(ProId, OrderId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "Are you really want to return this product ?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Confirm'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/returnTheOrder',
                    data: {
                        proId: ProId,
                        orderId: OrderId
                    },
                    method: 'get',
                    success(response) {
                        Swal.fire(
                            'Done!',
                            'Order Return request placed Successfully.',
                            'success'
                        )
                        location.reload()

                    }
                })

            }
        })
    }
</script>

<script src="../assets/js/exportexcel.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.3/html2pdf.bundle.min.js"></script>
<script>
    function exportToPDF() {
        const element = document.getElementById('invoice');
        element.style.width = '700px';
        element.style.height = '900px';
        let opt = {
            margin: 1,
            filename: 'Aura.pdf',
            image: { type: 'jpeg', quality: 1 },
            html2canvas: { scale: 1 },
            jsPDF: { unit: 'mm', orientation: 'portrait' }

        }
        html2pdf().set(opt)
            .from(element)
            .save();

    }

</script>