<div class="breadcrumb-area bg-gray menuBarTop">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                <li>
                    <a href="/">Home</a>
                </li>
                <li class="active">Wishlist </li>
            </ul>
        </div>
    </div>
</div>
<div class="cart-main-area pt-50 pb-500">
    <div class="container">
        <h3 class="cart-page-title">Your Wishlist items</h3>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                {{!-- table for laptops --}}
                <div class="table-content table-responsive cart-table-content d-none d-md-block">
                    <table>
                        <thead>
                            <tr class=" hidden-sm">
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Until Price</th>
                                <th> </th>
                                <th>action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each productDetails}}
                            <tr>
                                <td class="product-thumbnail">
                                    <a href="/details/{{products._id}}"><img src="/images/product-img/{{products.image1}}" width="150"
                                            alt=""></a>
                                </td>
                                <td class="product-name ">
                                    <a href="/details/{{products._id}}">{{products.titleMain}} </a>
                                    <p>MRP:{{products.MRP}} <br>Discount: {{products.totalDiscount}}%</p>
                                </td>
                                <td class="product-price-cart"><span class="amount">{{products.offerPrice}}</span></td>

                                <td class="product-wishlist-cart">

                                    <button onclick="removeWishlist('{{products._id}}','{{this._id}}') "
                                        class="btn btn-dark btn-sm  ">Remove</button>
                                </td>
                                <td class="product-wishlist-cart">
                                    <button onclick="addToCartWishlist('{{products._id}}','{{this._id}}')"
                                        class="btn btn-dark btn-sm  ">add to cart</button>
                                </td>
                            </tr>
                            {{/each }}
                        </tbody>
                    </table>
                </div>

                {{!-- table for mobile --}}
                <div class="d-block d-md-none">
                    {{#each productDetails}}
                    <div  style="height: 200px; ">
                        <div class=" col-4 float-left">
                            <a href="/details/{{products._id}}"><img src="/images/product-img/{{products.image1}}" width="100" alt=""></a>
                        </div>
                        <div class="col-8 float-right">
                            <a class="font-weight-bold" href="/details/{{products._id}}">{{products.title}}</a>

                            <p>MRP:{{products.MRP}} {{products.totalDiscount}}% Off <br>Offer Price:
                                {{products.offerPrice}}</p>
                            <div class="mt-3">
                                <button onclick="addToCartWishlist('{{products._id}}','{{this._id}}')"
                                    class="btn btn-sm text-light " style="background-color:rgb(228,67,17) ;" href="#"><i
                                        class="bi bi-cart3"></i> Add</button>
                                <button onclick="removeWishlist('{{products._id}}','{{this._id}}') "
                                    class="btn btn-outline-secondary btn-sm ml-3"><i class="bi bi-trash3"></i></button>

                            </div>
                        </div>

                    </div>
                    {{/each }}
                </div>

            </div>
        </div>
    </div>
</div>


<script>
    function removeWishlist(proId, WishlistId) {
        $.ajax({
            url: '/removeWishlist',
            data: {
                proId: proId,
                wishlistId: WishlistId
            },
            method: 'post',
            success(response) {
                Swal.fire(
                    'Deleted!',
                    'Your file has been deleted.',
                    'success'
                )
                location.reload()
            }
        })
    }
    function addToCartWishlist(proId, wishlistId) {
        console.log(proId, wishlistId)
        $.ajax({
            url: '/addToCartWishlist',
            data: {
                proId: proId,
                wishlistId: wishlistId
            },
            method: 'post',
            success: (response) => {
                if (response.status) {
                    let count = $('#cart-count').html()
                    count = parseInt(count) + 1
                    $('#cart-count').html(count)
                    Swal.fire({
                        position: 'top-end',
                        width: 300,
                        height: 100,
                        icon: 'success',
                        text: "Item Added to Cart",
                        showConfirmButton: false,
                        timer: 1500
                    }),
                        location.reload()
                } else {
                    Swal.fire({
                        position: 'top-end',
                        width: 300,
                        height: 100,
                        icon: 'success',
                        text: "Item not Added to Cart",
                        showConfirmButton: false,
                        timer: 5000
                    })
                }

            }
        })
    }

</script>